<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/controllerLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/motor1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/motor2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/motor1"
        android:layout_alignBottom="@+id/motor1"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/motor1"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/motor3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/motor1"
        android:layout_toLeftOf="@+id/motor2"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/motor4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/motor3"
        android:layout_alignBottom="@+id/motor3"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/motor3"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <ImageButton
        android:id="@+id/btnDown"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignLeft="@+id/btnUp"
        android:layout_below="@+id/btnUp"
        android:src="@drawable/down" />

    <ImageButton
        android:id="@+id/btnUp"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignTop="@+id/motor3"
        android:src="@drawable/up" />

    <Button
        android:id="@+id/btnHalt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/btnDown"
        android:layout_marginRight="19dp"
        android:height="50dp"
        android:minWidth="100dip"
        android:text="Halt"
        android:width="70dp" />

    <Button
        android:id="@+id/btnConnection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="Connection" />

    <Button
        android:id="@+id/btnTiltMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#00a0ff"
        android:padding="60dp"
        android:text="TiltMode Off"
        android:textColor="#ffffff" />

    <ImageButton
        android:id="@+id/btnYawLeft"
        android:layout_alignLeft="@+id/btnTiltMode"
        android:layout_alignParentTop="true"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="200dp"
        android:src="@drawable/left" />

    <ImageButton
        android:id="@+id/btnYawRight"
        android:layout_toRightOf="@id/btnYawLeft"
        android:layout_marginLeft="70dp"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignTop="@+id/btnConnection"
        android:src="@drawable/right" />

</RelativeLayout>