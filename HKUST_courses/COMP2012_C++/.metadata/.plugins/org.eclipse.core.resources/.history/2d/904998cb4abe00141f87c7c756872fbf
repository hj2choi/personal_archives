#include "stringset.h"

using namespace std;

StringSet::StringSet()
{
	size=0;
	capacity=0;
	arr=NULL;
}

StringSet::~StringSet()
{
	delete []arr;
	arr=NULL;
}

StringSet::StringSet(const std::string& oneItem)
{
	size=1;
	capacity=2;
	arr = new std::string[capacity];
	arr[0] = oneItem;

}

StringSet::StringSet(const string inputStrArr[], int sz)
{
	size = sz;
	capacity = size*2;
	arr = new string[capacity];
	for (int i=0; i<size; i++)
		arr[i] = inputStrArr[i];

}

